{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl" : "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@components": ["components/index"],
      "@constants/*": ["constants/*"],
      "@constants": ["constants/index"],
      "@navigation/*": ["navigation/*"],
      "@navigation": ["navigation/index"],
      "@screens/*": ["screens/*"],
      "@types": ["types/index"],
      "@utils": ["utils/index"],
    }
  }
}
